{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "noEmit": true,
    "outDir": "build"
  },
  "include": ["./src/**/*"],
  "exclude": ["**/node_modules/*", "./logs"]
}
